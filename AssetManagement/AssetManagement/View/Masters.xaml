                        <Frame CornerRadius="100"
                               Padding="7"
                               Margin="5">


                            <Image
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Source="arrow.png"></Image>
                        </Frame>
                        <Label x:Name="txt_createlocation"
                               Text="Location Master"
                               Style="{x:DynamicResource MediumLabelFont}"></Label>


                    </StackLayout>

                    <BoxView HeightRequest="3"
                             BackgroundColor="White"
                             Margin="0,15,0,0"></BoxView>

                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="FillAndExpand">

                        <Frame CornerRadius="100"
