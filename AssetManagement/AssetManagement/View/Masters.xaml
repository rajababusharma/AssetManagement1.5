                             Margin="0,15,0,0"></BoxView>
                    <StackLayout Orientation="Horizontal">

                        <Frame CornerRadius="100"
                               Padding="7"
                               Margin="5">
                            <Image HeightRequest="30"
                                   WidthRequest="30"
                                   Source="arrow.png"></Image>
                        </Frame>
